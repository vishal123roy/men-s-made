    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const couponId = document.getElementById("coupon-id");
            const description = document.getElementById("description");
            const maxDiscount = document.getElementById("max-discount");
            const maxAmount = document.getElementById("max-amount");
            const minAmount = document.getElementById("min-amount");
            const maxUser = document.getElementById("max-user");
            const expireDate = document.getElementById('expire-date');
            const form = document.getElementById("add-coupon-form");

            // Set min attribute to today for the expire date input to prevent past date selection
            const today = new Date().toISOString().split('T')[0];
            expireDate.setAttribute('min', today);

            // Form validation function
            function validateForm() {
                let formIsValid = true;

                // Coupon ID validation
                const couponIdValue = couponId.value.trim();
                if (couponIdValue === "" || /[\s,.]/.test(couponIdValue.charAt(0))) {
                    showError(couponId, "Coupon ID is required.");
                    formIsValid = false;
                } else {
                    hideError(couponId);
                }

                // Description validation
                const descriptionValue = description.value.trim();
                if (descriptionValue === "") {
                    showError(description, "Description is invalid.");
                    formIsValid = false;
                } else {
                    hideError(description);
                }

                // Minimum Amount validation
                const minValue = parseFloat(minAmount.value.trim());
                if (isNaN(minValue) || minValue < 1000) {
                    showError(minAmount, "Minimum Amount must be 1000 or above.");
                    formIsValid = false;
                } else {
                    hideError(minAmount);
                }

                // Maximum Discount validation
                const maxDiscountValue = parseFloat(maxDiscount.value.trim());
                if (isNaN(maxDiscountValue) || maxDiscountValue <= 0) {
                    showError(maxDiscount, "Maximum Discount must be a positive number.");
                    formIsValid = false;
                } else if (maxDiscountValue <= minValue * 0.05) {
                    showError(maxDiscount, "Maximum Discount must be greater than 5% of the Minimum Amount.");
                    formIsValid = false;
                } else if (maxDiscountValue >= minValue / 2) {
                    showError(maxDiscount, "Maximum Discount must be less than half of the Minimum Amount.");
                    formIsValid = false;
                } else {
                    hideError(maxDiscount);
                }

                // Maximum Amount validation (must be 3 times greater than Minimum Amount)
                const maxAmountValue = parseFloat(maxAmount.value.trim());
                if (isNaN(maxAmountValue) || maxAmountValue <= 0) {
                    showError(maxAmount, "Maximum Amount must be a positive number.");
                    formIsValid = false;
                } else if (maxAmountValue < minValue * 3) {
                    showError(maxAmount, "Maximum Amount must be at least 3 times greater than Minimum Amount.");
                    formIsValid = false;
                } else {
                    hideError(maxAmount);
                }

                // Maximum User validation
                const maxUserValue = parseFloat(maxUser.value.trim());
                if (isNaN(maxUserValue) || maxUserValue <= 0) {
                    showError(maxUser, "Maximum User must be a positive number.");
                    formIsValid = false;
                } else {
                    hideError(maxUser);
                }

                // Expiry date validation
                const selectedDate = new Date(expireDate.value.trim());
                const todayDate = new Date(today); // Today's date without time

                if (isNaN(selectedDate.getTime())) {
                    showError(expireDate, "Select a valid expiry date.");
                    formIsValid = false;
                } else if (selectedDate < todayDate) {
                    showError(expireDate, "Expiry date cannot be in the past.");
                    formIsValid = false;
                } else {
                    hideError(expireDate);
                }

                return formIsValid;
            }

            // Show error function
            function showError(element, message) {
                const errorElement = document.getElementById(element.id + "-error");
                errorElement.textContent = message;
                element.classList.add("is-invalid");
                element.classList.remove("is-valid");
            }

            // Hide error function
            function hideError(element) {
                const errorElement = document.getElementById(element.id + "-error");
                errorElement.textContent = "";
                element.classList.remove("is-invalid");
                element.classList.add("is-valid");
            }

            form.addEventListener("submit", async function (event) {
                event.preventDefault(); // Prevent default form submission

                // Validate the form
                if (!validateForm()) {
                    return; // Stop the form submission if validation fails
                }

                // If validation passes, proceed with fetch request
                const formData = new FormData(form);

                try {
                    const response = await fetch('/admin/createCoupon', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(Object.fromEntries(formData))
                    });

                    const data = await response.json();

                    if (response.ok) {
                        Swal.fire({
                            title: 'Success',
                            text: 'Coupon created',
                            icon: 'success',
                            timer: 2000
                        });
                        setTimeout(() => {
                            window.location.href = '/admin/couponList';
                        }, 2000);
                    } else {
                        Swal.fire({
                            title: 'Error',
                            text: data.message,
                            icon: 'error',
                            timer: 2000
                        });
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        title: 'Error',
                        text: 'Failed to create coupon',
                        icon: 'error',
                        timer: 2000
                    });
                }
            });
        });
