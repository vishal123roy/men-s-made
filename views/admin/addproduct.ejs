    <script>
        let cropper;
        let currentImageContainer;
        let currentFile;
        let selectedFiles = []; // To keep track of all the selected files

        function displaySelectedImages(input) {
            const selectedImagesContainer = document.getElementById('selectedImagesContainer');
            const files = Array.from(input.files);

            files.forEach(file => {
                selectedFiles.push(file); // Store the selected file

                const imageContainer = document.createElement('div');
                imageContainer.classList.add('image-container');

                const image = document.createElement('img');
                image.src = URL.createObjectURL(file);
                image.height = 60;
                image.width = 60;

                const closeButton = document.createElement('button');
                closeButton.innerHTML = '&times;';
                closeButton.classList.add('close-button');
                closeButton.addEventListener('click', function () {
                    imageContainer.remove();
                    selectedFiles = selectedFiles.filter(f => f !== file); // Remove the file from the selected files
                    updateFileInput(input, selectedFiles); // Update the file input with the remaining files
                });

                image.addEventListener('click', function () {
                    showCropperModal(file, imageContainer, input);
                });

                imageContainer.appendChild(image);
                imageContainer.appendChild(closeButton);
                selectedImagesContainer.appendChild(imageContainer);
            });

            updateFileInput(input, selectedFiles); // Ensure the input is updated after displaying images
        }

        function showCropperModal(file, imageContainer, input) {
            const modal = new bootstrap.Modal(document.getElementById('cropperModal'));
            const image = document.getElementById('imageToCrop');
            currentImageContainer = imageContainer;
            currentFile = file;

            image.src = '';
            if (cropper) {
                cropper.destroy();
                cropper = null;
            }

            const reader = new FileReader();
            reader.onload = function (e) {
                image.src = e.target.result;
                modal.show();

                modal._element.addEventListener('shown.bs.modal', function () {
                    cropper = new Cropper(image, {
                        aspectRatio: 1,
                        viewMode: 1,
                        autoCropArea: 1,
                    });
                }, { once: true });
            };
            reader.readAsDataURL(file);
        }

        document.getElementById('cropButton').addEventListener('click', function () {
            if (!cropper) return;

            const canvas = cropper.getCroppedCanvas();
            canvas.toBlob(function (blob) {
                const croppedFile = new File([blob], currentFile.name, { type: 'image/png', lastModified: new Date().getTime() });
                const croppedImage = document.createElement('img');
                croppedImage.src = URL.createObjectURL(croppedFile);
                croppedImage.height = 60;
                croppedImage.width = 60;
                currentImageContainer.innerHTML = '';
                currentImageContainer.appendChild(croppedImage);

                selectedFiles = selectedFiles.map(f => f === currentFile ? croppedFile : f); // Replace the file with the cropped one
                updateFileInput(document.getElementById('imageUpload'), selectedFiles);

                bootstrap.Modal.getInstance(document.getElementById('cropperModal')).hide();
            }, 'image/png');
        });

        document.getElementById('cropperModal').addEventListener('hidden.bs.modal', function () {
            if (cropper) {
                cropper.destroy();
                cropper = null;
            }
        });

        function updateFileInput(input, files) {
            const dataTransfer = new DataTransfer();
            files.forEach(file => dataTransfer.items.add(file));
            input.files = dataTransfer.files;
        }

        document.getElementById('imageUpload').addEventListener('change', function (event) {
            displaySelectedImages(event.target);
        });
    </script>

    <script>
        // Add this to your existing JavaScript
        document.getElementById('productForm').addEventListener('submit', function (event) {
            if (!this.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }

            // Custom validation for file input
            const fileInput = document.getElementById('imageUpload');
            if (fileInput.files.length === 0) {
                fileInput.setCustomValidity('Please select at least one image.');
            } else {
                fileInput.setCustomValidity('');
            }

            // Custom validation for size inputs
            const sizeInputs = document.querySelectorAll('input[name^="sizes"]');
            sizeInputs.forEach(function (input) {
                if (input.value === '' || input.value < 0) {
                    input.setCustomValidity('Please enter a non-negative quantity.');
                } else {
                    input.setCustomValidity('');
                }
            });

            this.classList.add('was-validated');
        });

        // Reset custom validity when file input changes
        document.getElementById('imageUpload').addEventListener('change', function () {
            this.setCustomValidity('');
        });

        // Reset custom validity when size inputs change
        document.querySelectorAll('input[name^="sizes"]').forEach(function (input) {
            input.addEventListener('input', function () {
                if (this.value < 0) {
                    this.setCustomValidity('Value must be non-negative.');
                } else {
                    this.setCustomValidity('');
                }
            });
        });
