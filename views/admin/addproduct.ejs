                                        name="product_brand">
                                </div>
                                <div class="row gx-3">
                                    <div class="col-md-6 mb-3">
                                        <label for="price" class="form-label">Price</label>
                                        <input type="text" placeholder="Type here" class="form-control" id="price"
                                            name="price">
                                    </div>
                                    <div class="col-md-6 mb-3">
