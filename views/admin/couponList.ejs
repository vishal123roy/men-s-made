    <script>
        async function deleteCoupon(id) {
            try {
                console.log('async function inside');
                const response = await fetch('/admin/deleteCoupon', {
                    method: 'POST',
                    headers: {
                        'content-Type': 'application/json'
                    },
                    body: JSON.stringify({ id: id })
                })

                if (response.ok) {
                    Swal.fire({
                        title: 'success',
                        text: 'Coupon has been deleted',
                        icon: 'success',
                        timer: 2000
                    })
                    window.location.reload();
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: 'Failed to delete coupon',
                        icon: 'error',
                        timer: 2000
                    })
                }

            } catch (error) {

                console.log(error.message);

            }
        }
    </script>

