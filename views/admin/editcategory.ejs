    <script>
        document.getElementById('editForm').addEventListener('submit', function(event) {
            // Prevent the form from submitting
            event.preventDefault();
        
            // Get the input values
            const name = document.getElementById('name').value.trim();
            const description = document.getElementById('description').value.trim();
            
            // Error message elements
            const nameError = document.getElementById('nameError');
            const descriptionError = document.getElementById('descriptionError');
            
            // Regular expressions for validation
            const nameRegex = /^[A-Za-z]+$/;
            const descriptionRegex = /^(?=.*[A-Za-z])[A-Za-z0-9\s.,-]*$/; // Requires at least one alphabet, allows numbers and special characters.
        
            // Clear previous error messages
            nameError.textContent = '';
            descriptionError.textContent = '';
            
            let isValid = true;
        
            // Validate the name field (only alphabets)
            if (!nameRegex.test(name)) {
                nameError.textContent = 'Category name should contain only alphabets.';
                isValid = false;
            }
        
            // Validate the description field (must contain at least one alphabet, others optional)
            if (!descriptionRegex.test(description)) {
                descriptionError.textContent = 'Description must contain at least one alphabet. It can also include numbers, spaces, commas, periods, and hyphens.';
                isValid = false;
            }
        
            // If all validations pass, submit the form
            if (isValid) {
                this.submit();
            }
        });
        </script>
