    <!-- Main Script -->
    <script src="admin_assets/js/main.js" type="text/javascript"></script>
    <script>
        async function changeStatus(orderId) {
            try {
                const orderElement = document.getElementById('orderStatus');
                console.log(orderElement);

                const orderSatus = orderElement.value;
                console.log(orderSatus);

                const response = await fetch(`/admin/changeStatus/${orderId}`, {
                    method: 'PUT',
                    headers: {
                        'content-Type': 'application/json'
                    },
                    body: JSON.stringify({ action: orderSatus })
                })

                if (response.ok) {
                    console.log('response reached')
                    Swal.fire({
                        title: 'success',
                        text: 'Order status changed',
                        icon: 'success',
                        timer: 2000
                    })
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);

                }

            } catch (error) {

                console.log(error.message);

            }
        }
    </SCript>
</body>

