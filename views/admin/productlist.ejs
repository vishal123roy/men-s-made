        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Product List </h2>
                </div>
            </div>

            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">

                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">Status</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="All">Show all</option>
                            </select>
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <% products.forEach((product)=> { %>
                        <article class="itemlist">
                            <div class="row align-items-center">
                                <div class="col-lg-2 col-md-3 col-sm-4 col-6 flex-grow-1 col-name">
                                    <a class="itemside" href="#">
                                        <div class="left">
                                            <img src="/product_Assets/<%= product.images[0] %>"
                                                class="img-sm img-thumbnail" alt="Item">
                                        </div>
                                        <div class="info">
                                            <h6 class="mb-0">
                                                <%= product.productname %>
                                            </h6>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-3 col-6 d-flex">
                                    <span>
                                        <%= product.brand %>
                                    </span>
                                </div>
                                <div class="col-lg-1 col-md-1 col-sm-2 col-6 d-flex">
                                    <span>
                                        <%= product.price %>
                                    </span>
                                </div>
                                <div class="col-lg-2 col-md-2 col-sm-3 col-6 d-flex">
                                    <span>
                                        <%= product.productcategory %>
                                    </span>
                                </div>
                                <div class="col-lg-2 col-md-4 col-sm-6 col-6 ">
                                    <% for (let i=0; i < product.sizes.length; i++) { %>
                                        <div style="width: fit-content;">
                                            <%= product.sizes[i].size %> : <%= product.sizes[i].quantity %>
                                        </div>
                                        <% } %>
                                </div>
                                <div class="col-lg-2 col-md-1 col-sm-2 col-6 col-status d-flex">
                                    <span>
                                        <% if (product.is_listed===true) { %>
                                            <span class="badge rounded-pill alert-success">Active</span>
                                            <% } else { %>
                                                <span class="badge rounded-pill alert-danger">Inactive</span>
                                                <% } %>
                                    </span>
                                </div>
                                <div
                                    class="col-lg-1 col-md-1 col-sm-6 col-6 d-flex justify-content-end align-items-center">
                                    <a href="/admin/updateproduct?id=<%= product._id %>"
                                        class="btn btn-sm font-sm  btn-brand me-1" style="border-radius:0 ;">
                                        Edit
                                    </a>
                                    <a href="/admin/block?id=<%= product._id %>" class="btn btn-sm font-sm btn-light"
                                        style="border-radius:0 ;">
                                        <span>
                                            <% if (product.is_listed===true) { %>
                                                <span>block</span>
                                                <% } else { %>
                                                    <span>unblock</span>
                                                    <% } %>
                                        </span>
                                    </a>
                                </div>
                            </div> <!-- row .// -->
                        </article> <!-- itemlist  .// -->
                        <% }) %>
                </div> <!-- card-body end// -->
                <div class="card-footer">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage> 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/admin/productlist?page=<%= currentPage - 1 %>">Previous</a>
                                </li>
                                <% } %>

                                    <% for (let i=1; i <=totalPages; i++) { %>
                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                            <a class="page-link" href="/admin/productlist?page=<%= i %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                        <% } %>

                                            <% if (currentPage < totalPages) { %>
                                                <li class="page-item">
                                                    <a class="page-link"
                                                        href="/admin/productlist?page=<%= currentPage + 1 %>">Next</a>
                                                </li>
                                                <% } %>
                        </ul>
