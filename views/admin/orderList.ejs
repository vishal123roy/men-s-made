            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-2 col-6 col-md-3">
                            <p>Status: <%= status %>
                            </p>
                            <select class="form-select" id="statusFilter">
                                <option value="pending" <%=status==='pending' ? 'selected' : '' %>>Pending</option>
                                <option value="Return pending" <%=status==='Return pending' ? 'selected' : '' %>>Return
                                    pending</option>
                                <option value="delivered" <%=status==='delivered' ? 'selected' : '' %>>Delivered
                                </option>
                                <option value="canceled" <%=status==='canceled' ? 'selected' : '' %>>Canceled</option>
                                <option value="All" <%=status==='All' ? 'selected' : '' %>>Show all</option>

                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col" class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% AllOrders.forEach(order=> { %>
                                    <% if (order.status !=='failed' ) { %> <!-- Exclude orders with 'failed' status -->
                                        <tr>
                                            <td>
                                                <%= order.orderNumber %>
                                            </td>
                                            <td>
                                                <%= order.userId.email %>
                                            </td>
                                            <td>
                                                <%= order.totalAmount.toFixed(2) %>
                                            </td>
                                            <td>
                                                <% if (order.status==='pending' ) { %>
                                                    <span class="badge rounded-pill alert-warning">
                                                        <%= order.status %>
                                                    </span>
                                                    <% } else if (order.status==='delivered' ) { %>
                                                        <span class="badge rounded-pill alert-success">
                                                            <%= order.status %>
                                                        </span>
                                                        <% } else if (order.status==='returned' ) { %>
                                                            <span class="badge rounded-pill alert-success">
                                                                <%= order.status %>
                                                            </span>
                                                            <% } else if (order.status==='canceled' ) { %>
                                                                <span class="badge rounded-pill alert-danger">
                                                                    <%= order.status %>
                                                                </span>
                                                                <% } else if (order.status==='Return pending' ) { %>
                                                                    <span class="badge rounded-pill alert-warning">
                                                                        <%= order.status %>
                                                                    </span>
                                                                    <% } %>
                                            </td>
                                            <td>
                                                <%= order.orderDate.toDateString() %>
                                            </td>
                                            <td class="text-end">
                                                <a href="/admin/orderDetails?id=<%= order._id %>"
                                                    class="btn btn-md font-sm" style="border-radius: 0;">Detail</a>
                                            </td>
                                        </tr>
                                        <% } %>
                                            <% }); %>
