    <script>
        console.log("status is ", status); // Ensure this is logging correctly

        // Function to get query parameter value
        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param);
        }

        // Function to set the selected value of the dropdown
        function setDropdownValue(value) {
            const statusFilter = document.getElementById('statusFilter');
            statusFilter.value = value || 'All'; // Default to 'All' if no value is given
        }

        // Function to update the URL
        function updateUrlParam(param, value) {
            const url = new URL(window.location.href);
            url.searchParams.set(param, value);
            history.pushState(null, '', url.toString());
            window.location.reload();
        }

        // Initialize the dropdown based on the query parameter
        document.addEventListener('DOMContentLoaded', function () {
            const status = getQueryParam('status')
            const page = getQueryParam('page')
            setDropdownValue(status); // Set the dropdown value based on the query parameter
        });

        // Add change event listener to the dropdown
        document.getElementById('statusFilter').addEventListener('change', function () {
            const selectedStatus = this.value;
            updateUrlParam('status', selectedStatus); // Update URL with the selected status
        });

        // Handle browser back and forward navigation
        window.addEventListener('popstate', function () {
            const status = getQueryParam('status');
            setDropdownValue(status); // Update the dropdown value based on the URL
        });
    </script>
