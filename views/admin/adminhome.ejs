    <script>
        async function filterChart(choice) {
            let chooseValue;
            switch (choice) {
                case 'weekly':
                    chooseValue = 'weekly';
                    break;
                case 'currentMonth':
                    chooseValue = 'currentMonth';
                    break;
                case 'monthly':
                    chooseValue = 'monthly';
                    break;
                default:
                    console.error('Invalid option selected');
                    return;
            }
    
            try {
                const response = await fetch('/admin/filterChart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ chooseValue })
                });
    
                const data = await response.json();
    
                if (data.success) {
                    const { xValues, yValues, barColors } = data.success;
    
                    const chartData = {
                        labels: xValues,
                        datasets: [{
                            backgroundColor: barColors,
                            data: yValues
                        }]
                    };
    
                    updateChart(chartData);
                } else {
                    console.error('Error fetching data:', data.message);
                }
            } catch (error) {
                console.error('Fetch error:', error);
            }
        }
    
        function generateBarColors(daysInMonth) {
            const barColors = [];
            const hueStep = 360 / daysInMonth;
            for (let i = 0; i < daysInMonth; i++) {
                const hue = i * hueStep;
                const color = `hsl(${hue}, 70%, 50%)`;
                barColors.push(color);
            }
            return barColors;
        }
    
        function updateChart(chartData) {
            const ctx = document.getElementById('barChart').getContext('2d');
            if (window.weekChart instanceof Chart) {
                window.weekChart.destroy();
            }
            window.weekChart = new Chart(ctx, {
                type: 'bar',
                data: chartData,
                options: {
                    responsive: false,
                    maintainAspectRatio: true,
                    tooltips: {
                        callbacks: {
                            label: function (tooltipItem, data) {
                                const value = data.datasets[0].data[tooltipItem.index];
                                return value !== undefined ? value : '';
                            }
                        }
                    },
                    legend: {
                        display: false // Disable the legend
                    }
                }
            });
        }
    
        const currentDate = new Date();
        const daysInMonth = new Date(currentDate.getFullYear(), currentDate.getMonth() + 1, 0).getDate();
        const xValues = [];
        for (let i = 1; i <= daysInMonth; i++) {
            xValues.push(i.toString());
        }
    
        const yValues = JSON.parse('<%= JSON.stringify(yValues) %>');
        const barColors = generateBarColors(daysInMonth);
    
        const initialChartData = {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                data: yValues
            }]
        };
    
        if (window.weekChart) {
            window.weekChart.destroy();
        }
    
        window.weekChart = new Chart(document.getElementById('barChart'), {
            type: 'bar',
            data: initialChartData,
            options: {
                responsive: false,
                maintainAspectRatio: true,
                tooltips: {
                    callbacks: {
                        label: function (tooltipItem, data) {
                            const value = data.datasets[0].data[tooltipItem.index];
                            return value !== undefined ? value : '';
                        }
                    }
                },
                legend: {
                    display: false // Disable the legend to remove the red box
                }
            }
        });
    </script>
