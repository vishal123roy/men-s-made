    <script>
        $(document).ready(function () {
            $('#addToWallet').click(function () {
                const money = document.getElementById('addAmount').value;
                if (money !== '') {
                    $.ajax({
                        url: '/addToWallet',
                        method: 'POST',
                        data: {
                            amount: money
                        },
                        success: (response) => {
                            console.log("response came here")
                            let orderId = response.order.id;

                            var options = {
                                "key": "rzp_test_gkhwXaFRx7sRf0", // Enter the Key ID generated from the Dashboard
                                "amount": response.order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
                                "currency": "INR",
                                "name": "Acme Corp",
                                "description": "Test Transaction",
                                "image": "https://example.com/your_logo",
                                "order_id": orderId, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
                                "handler": function (response) {
                                    verifyWalletPayment(response)
                                },
                                "prefill": {
                                    "name": "Gaurav Kumar",
                                    "email": "gaurav.kumar@example.com",
                                    "contact": "9000090000"
                                },
                                "notes": {
                                    "address": "Razorpay Corporate Office"
                                },
                                "theme": {
                                    "color": "#3399cc"
                                }
                            };
                            var rzp1 = new Razorpay(options);
                            rzp1.on('payment.failed', function (response) {
                                alert(response.error.code);
                                alert(response.error.description);
                                alert(response.error.source);
                                alert(response.error.step);
                                alert(response.error.reason);
                                alert(response.error.metadata.order_id);
                                alert(response.error.metadata.payment_id);
                            });

                            rzp1.open();
                        }
                    })
                } else {
                    alert('Enter amount');
                }
            })
        })

        async function verifyWalletPayment(response) {
            const money = document.getElementById('addAmount').value;
            const res = await fetch('/verifyAddAmount', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    response: response,
                    amount: money
                })
            })
            if (res.ok) {
                Swal.fire({
                    title: 'Success',
                    text: 'Amount added to wallet',
                    icon: 'success',
                    timer: 2000
                }).then(() => {
                    window.location.reload();
                })
            }
        }
    </script>
