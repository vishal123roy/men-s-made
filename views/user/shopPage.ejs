        categoryInput.addEventListener('change', () => applyFilterOrSort());
    });
    document.querySelectorAll('input[name="brand"]').forEach(brandInput => {
        brandInput.addEventListener('change', () => applyFilterOrSort());
    });
    document.getElementById('SortBy').addEventListener('change', () => applyFilterOrSort());
});

