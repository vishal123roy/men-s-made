    <script>
        function hidemessage() {
            const hidmess = document.getElementById('errormsm');
            hidmess.style.display = "none";
        }
        setTimeout(hidemessage, 4000);

        function validatePasswordForm() {
            let isValid = true;

            // Validate Current Password
            const currentPassword = document.getElementById('currentPassword').value.trim();
            const currentPasswordError = document.getElementById('currentPasswordError');
            if (currentPassword === "") {
                currentPasswordError.style.display = 'block';
                isValid = false;
            } else {
                currentPasswordError.style.display = 'none';
            }

            // Validate New Password (Minimum 6 characters, at least 1 letter and 1 number)
            const newPassword = document.getElementById('newPassword').value.trim();
            const newPasswordError = document.getElementById('newPasswordError');
            const passwordPattern = /^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{6,}$/; // Minimum 6 characters, at least 1 letter and 1 number
            if (!passwordPattern.test(newPassword)) {
                newPasswordError.style.display = 'block';
                isValid = false;
            } else {
                newPasswordError.style.display = 'none';
            }

            // Validate Confirm Password (Matching the new password)
            const confirmPassword = document.getElementById('confirmPassword').value.trim();
            const confirmPasswordError = document.getElementById('confirmPasswordError');
            if (newPassword !== confirmPassword) {
                confirmPasswordError.style.display = 'block';
                isValid = false;
            } else {
                confirmPasswordError.style.display = 'none';
            }

            return isValid;
        }

    </script>
