    <script>
        function hidemessage() {
            const hidmess = document.getElementById('errormsm');
            hidmess.style.display = "none";
        }
        setTimeout(hidemessage, 4000);


        window.onload = function () {
            const form = document.getElementById('addressForm');
            const locationType = form.getAttribute('data-location-type');
            const radioButtons = document.getElementsByName('locationType');

            radioButtons.forEach(radio => {
                if (radio.value === locationType) {
                    radio.checked = true;
                }
            });
        }

        document.getElementById('addressForm').addEventListener('submit', function (e) {
            console.log('Form submission attempted');
            e.preventDefault();
            if (validateForm()) {
                console.log('Form validation passed, submitting form');
                this.submit();
            } else {
                console.log('Form validation failed');
            }
        });
        function validateForm() {
            let isValid = true;

            // Name validation
            const name = document.getElementById('name');
            if (name.value.trim() === '') {
                showError('nameError', 'Name is required');
                isValid = false;
            } else {
                clearError('nameError');
            }

            // Pin code validation
            const pinCode = document.getElementById('pinCode');
            if (pinCode.value.trim() === '' || !/^\d{6}$/.test(pinCode.value)) {
                showError('pinCodeError', 'Enter a valid 6-digit pin code');
                isValid = false;
            } else {
                clearError('pinCodeError');
            }

            // Locality validation
            const locality = document.getElementById('locality');
            if (locality.value.trim() === '') {
                showError('localityError', 'Locality is required');
                isValid = false;
            } else {
                clearError('localityError');
            }

            // Address validation
            const address = document.getElementById('address');
            if (address.value.trim() === '') {
                showError('addressAreaError', 'Address is required');
                isValid = false;
            } else {
                clearError('addressAreaError');
            }

            // District validation
            const district = document.getElementById('district');
            if (district.value.trim() === '') {
                showError('districtError', 'City/District is required');
                isValid = false;
            } else {
                clearError('districtError');
            }

            // State validation
            const state = document.getElementById('state');
            if (state.value.trim() === '') {
                showError('stateError', 'State is required');
                isValid = false;
            } else {
                clearError('stateError');
            }

            // Mobile validation
            const mobile = document.getElementById('mobile');
            if (mobile.value.trim() === '' || !/^\d{10}$/.test(mobile.value)) {
                showError('mobileError', 'Enter a valid 10-digit mobile number');
                isValid = false;
            } else {
                clearError('mobileError');
            }

            // Location Type validation
            const locationType = document.querySelector('input[name="locationType"]:checked');
            if (!locationType) {
                showError('locationTypeError', 'Please select a location type');
                isValid = false;
            } else {
                clearError('locationTypeError');
            }

            return isValid;
        }

        function showError(elementId, message) {
            const errorElement = document.getElementById(elementId);
            if (errorElement) {
                errorElement.textContent = message;
            }
        }

        function clearError(elementId) {
            const errorElement = document.getElementById(elementId);
            if (errorElement) {
                errorElement.textContent = '';
            }
        }
    </script>
